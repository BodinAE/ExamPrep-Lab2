<Window x:Class="Lab2.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="AddWindow" Height="750" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="ID" Margin="0 15 0 5"></Label>
            <TextBox Name = "ID" Width="30" Height="30" Margin="0 0 0 15"></TextBox>
            <Label Content="Date" Margin="0 15 0 5"/>
            <DatePicker Name="Date" SelectedDateFormat="Short"></DatePicker>
            <Label Content="Appliance Type" Margin="0 15 0 5"/>
            <ComboBox Name = "ApplianceType" Width="250" Height="30" Margin="0 0 0 15"></ComboBox>
            <Label Content="Model" Margin="0 15 0 5"/>
            <TextBox Name = "Model" Width="250" Height="30" Margin="0 0 0 15"></TextBox>
            <Label Content="Problem" Margin="0 15 0 5"/>
            <TextBox Name = "Problem" Width="250" Height="30" Margin="0 0 0 15"></TextBox>
            <Label Content="Client Name" Margin="0 15 0 5"/>
            <TextBox Name = "ClientName" Width="250" Height="30" Margin="0 0 0 15"></TextBox>
            <Label Content="Client Phone Number" Margin="0 15 0 5"/>
            <TextBox Name = "Phone" Width="250" Height="30" Margin="0 0 0 15"></TextBox>
            <Label Content="Repair Status" Margin="0 15 0 5"/>
            <ComboBox Name = "Status" Width="250" Height="30" Margin="0 0 0 15"></ComboBox>

        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="ADD" Click="AddRepair" Grid.Column="1"></Button>
            <Button Content="CANCEL" Grid.Column="1" Click="CancelButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
